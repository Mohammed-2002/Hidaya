<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Naam" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="E-mailadres" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wachtwoord"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/textViewAdminPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="In te vullen enkel indien je een admin bent"
        android:visibility="visible" />

    <EditText
        android:id="@+id/editTextAdminPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Admin wachtwoord"
        android:inputType="textPassword"
        android:visibility="visible" />

    <Button
        android:id="@+id/inschrijfbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verder" />

</LinearLayout>
